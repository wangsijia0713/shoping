<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistActivity"
    android:background="@mipmap/login_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="180dp">
        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:textColorHint="#fff"
            android:textSize="18sp"
            android:drawableLeft="@mipmap/login_phone"
            android:background="@android:color/transparent"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:drawablePadding="20dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/yz"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:password="true"
                android:layout_gravity="center"
                android:textColorHint="#fff"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/regist_yz"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:drawablePadding="20dp"
                />
            <TextView
                android:id="@+id/hqyz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="获取验证码"
                android:textSize="14sp"
                android:textColor="#fff"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/pwd"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="登录密码"
                android:password="true"
                android:layout_gravity="center"
                android:textColorHint="#fff"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/login_mi"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:paddingBottom="10dp"
                android:drawablePadding="20dp"
                />
            <ImageView
                android:id="@+id/eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_mi"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/regist_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号？立即登录"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_Regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#ff5f71"
        android:background="@drawable/shape"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        />

</RelativeLayout>